<%= form_with model: @tweet, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_area :title, class: :form__text, id:"tweet_title" %>
  </div>

  <div class="field">
    <%= f.label :text, "テキスト" %><br />
    <%= f.text_area :text, class: :form__text, id:"tweet_text" %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"tweet_image" %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>